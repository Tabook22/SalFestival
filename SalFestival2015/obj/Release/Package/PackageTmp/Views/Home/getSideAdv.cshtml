@{
    Layout = "";
}

<style>
    #advContainer img{width:565px;}
</style>
<div class="siteAdv">
    <ul class="advlst">
        @foreach (var item in Model)
        {
            <li>
                                  <img src='@Url.Content(item.a_img)' class="sidadvlnk" data-advid='@item.Id' data-toggle="modal" data-target="#myModal" />
   
               
               
            </li>
        }
        </ul>
